  <!-- ═══ JS — Carousel + API stubs ═══ -->
  <script>
    /* ──────────────────────────────────────────────
       CAROUSEL
    ────────────────────────────────────────────── */
    let currentSlide = 0;
    const track = document.getElementById('bannerTrack');
    const dots  = document.querySelectorAll('.banner-dot');

    function goToSlide(n) {
      const slides = track.querySelectorAll('.banner-slide');
      currentSlide = (n + slides.length) % slides.length;
      track.style.transform = `translateX(-${currentSlide * 100}%)`;
      dots.forEach((d, i) => d.classList.toggle('active', i === currentSlide));
    }
    function slideCarousel(dir) { goToSlide(currentSlide + dir); }

    // Auto-advance every 6 s
    let autoplay = setInterval(() => slideCarousel(1), 6000);
    track.closest('.banner-track-wrapper').addEventListener('mouseenter', () => clearInterval(autoplay));
    track.closest('.banner-track-wrapper').addEventListener('mouseleave', () => {
      autoplay = setInterval(() => slideCarousel(1), 6000);
    });

    /* ──────────────────────────────────────────────
       NAV PILLS
    ────────────────────────────────────────────── */
    document.querySelectorAll('.nav-pill').forEach(pill => {
      pill.addEventListener('click', () => {
        document.querySelectorAll('.nav-pill').forEach(p => p.classList.remove('active'));
        pill.classList.add('active');
      });
    });

    function toggleMenu() {
      // API HOOK: open a slide-out drawer / mobile nav
      console.log('toggleMenu()');
    }

    function filterSection(key) {
      // API HOOK: re-fetch grid data for the active pill
      console.log('filterSection:', key);
    }

    /* ──────────────────────────────────────────────
       SEARCH
    ────────────────────────────────────────────── */
    let searchTimer;
    function handleSearch(query) {
      clearTimeout(searchTimer);
      if (!query.trim()) return;
      searchTimer = setTimeout(() => {
        // API HOOK: fetch /api/search?q=query and render results
        console.log('search:', query);
        // fetchSearch(query).then(renderSearchResults);
      }, 350);
    }

    /* ──────────────────────────────────────────────
       NAVIGATION
    ────────────────────────────────────────────── */
    function viewProject(id) {
      window.location.href = `https://flavortown.hackclub.com/projects/${id}`;
    }

    function viewUser(id) {
      // API HOOK: navigate to /users/:id profile
      console.log('viewUser:', id);
      // window.location.href = `/users/${id}`;
    }

    /* ──────────────────────────────────────────────
       DATA LOADING — replace stubs with real fetches
    ────────────────────────────────────────────── */

    async function loadFeaturedBanner() {
      const res  = await fetch('/api/hot');
      const data = await res.json();
      const projects = Array.isArray(data) ? data : Object.entries(data).map(([id, item]) => ({id, ...item}));
      renderBannerSlides(projects);
    }

    async function loadTopWeek() {
      const res  = await fetch('/api/top_this_week');
      const data = await res.json();
      const projects = Array.isArray(data) ? data : Object.entries(data).map(([id, item]) => ({id, ...item}));
      renderProjectCards(document.getElementById('topWeekGrid'), projects);
      // document.getElementById('weekLabel').textContent = `Week of ${data.week_label}`;
    }

    async function loadFanFavourites() {
      const res  = await fetch('/api/fan_favourites');
      const data = await res.json();
      const projects = Array.isArray(data) ? data : Object.entries(data).map(([id, item]) => ({id, ...item}));
      renderHCards(document.getElementById('fanFavGrid'), projects);
    }

    async function loadTopAllTime() {
      const res  = await fetch('/api/top_all_time');
      const data = await res.json();
      const projects = Array.isArray(data) ? data : Object.entries(data).map(([id, item]) => ({id, ...item}));
      renderHCards(document.getElementById('topAllTimeGrid'), projects);
    }

    async function loadTopContributors() {
      const res  = await fetch('/api/most_time_spent');
      const data = await res.json();
      const users = Array.isArray(data) ? data : Object.values(data);
      renderBubbles(document.getElementById('bubbleRow'), users);
    }

    /* ──────────────────────────────────────────────
       RENDER HELPERS
    ────────────────────────────────────────────── */

    function renderBannerSlides(projects) {
      if (!projects || projects.length === 0) return;
      const track = document.getElementById('bannerTrack');
      const dotsContainer = document.getElementById('bannerDots');
      
      track.innerHTML = projects.map(p => `
        <div class="banner-slide" data-project-id="${p.id}">
          <div class="banner-image-area">
            ${p.banner_url && p.banner_url.trim() ? `<img src="${p.banner_url}" alt="${p.title || 'Project'}" style="width: 100%; height: 100%; object-fit: cover; object-position: center;" loading="eager" onerror="this.style.display='none'" />` : ''}<div class="banner-image-placeholder ${p.banner_url && p.banner_url.trim() ? 'hidden' : ''}">PROJECT IMAGE</div>
          </div>
          <div class="banner-info">
            <span class="banner-project-id">#${p.slack_channel || 'general'}</span>
            <h2 class="banner-project-name">${p.title || p.name || 'Untitled'}</h2>
            <div class="banner-slack-row">
              <div class="banner-slack-icon">
                ${p.avatar_url ? `<img src="${p.avatar_url}" alt="${p.display_name || 'User'}" />` : '<svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M5.042 15.165…"/></svg>'}
              </div>
              <span class="banner-slack-name">${p.display_name || 'general'}</span>
            </div>
            <div class="banner-stats">
              <div class="banner-stat">
                <span class="banner-stat-val">—</span>
                <span class="banner-stat-lbl">Rating</span>
              </div>
              <div class="banner-stat">
                <span class="banner-stat-val">${p.total_hours || '—'}</span>
                <span class="banner-stat-lbl">Hrs Spent</span>
              </div>
              <div class="banner-stat">
                <span class="banner-stat-val">—</span>
                <span class="banner-stat-lbl">Contributors</span>
              </div>
            </div>
            <button class="banner-btn" onclick="viewProject('${p.id}')">
              View Project
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </button>
          </div>
        </div>
      `).join('');
      
      dotsContainer.innerHTML = projects.map((_, i) => `
        <div class="banner-dot${i === 0 ? ' active' : ''}" onclick="goToSlide(${i})"></div>
      `).join('');
      
      goToSlide(0);
    }

    function renderProjectCards(container, projects) {
      if (!projects || projects.length === 0) {
        container.innerHTML = '<p class="text-center text-muted">No projects found</p>';
        return;
      }
      container.innerHTML = projects.map((p, i) => `
        <div class="project-card" onclick="viewProject('${p.id}')" data-project-id="${p.id}">
          <div class="project-card-thumb">
            ${p.banner_url && p.banner_url.trim() ? `<img src="${p.banner_url}" alt="${p.title || 'Project'}" style="width: 100%; height: 100%; object-fit: cover; object-position: center;" loading="lazy" onerror="this.parentElement.querySelector('.project-card-thumb-placeholder').style.display='flex'" />` : ''}<div class="project-card-thumb-placeholder ${p.banner_url && p.banner_url.trim() ? 'hidden' : ''}">THUMBNAIL</div>
          </div>
          <span class="project-card-rank">${i + 1}</span>
          <div class="project-card-body">
            <div class="project-card-slack">
              <div class="project-card-icon">
                ${p.avatar_url ? `<img src="${p.avatar_url}" alt="${p.display_name || 'User'}" style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;" loading="lazy" />` : '<svg width="10" height="10" viewBox="0 0 24 24" fill="currentColor"><rect width="4" height="4" x="3" y="3" rx="1"/><rect width="4" height="4" x="17" y="3" rx="1"/><rect width="4" height="4" x="3" y="17" rx="1"/><rect width="4" height="4" x="17" y="17" rx="1"/></svg>'}
              </div>
              <span class="project-card-name">${p.title || p.name || 'Untitled'}</span>
            </div>
            <span class="project-card-meta">${p.display_name || 'general'} · ★ ${p.rank || '—'}</span>
          </div>
        </div>
      `).join('');
    }

    function renderHCards(container, projects) {
      if (!projects || projects.length === 0) {
        container.innerHTML = '<p class="text-center text-muted">No projects found</p>';
        return;
      }
      container.innerHTML = projects.map(p => `
        <div class="hcard" onclick="viewProject('${p.id}')" data-project-id="${p.id}">
          <div class="hcard-thumb">
            ${p.banner_url && p.banner_url.trim() ? `<img src="${p.banner_url}" alt="${p.title || 'Project'}" style="width: 100%; height: 100%; object-fit: cover; object-position: center;" loading="lazy" onerror="this.parentElement.querySelector('.hcard-thumb-placeholder').style.display='flex'" />` : ''}<div class="hcard-thumb-placeholder ${p.banner_url && p.banner_url.trim() ? 'hidden' : ''}">THUMBNAIL</div>
          </div>
          <div class="hcard-body">
            <div class="hcard-icon">
              ${p.avatar_url ? `<img src="${p.avatar_url}" alt="${p.display_name || 'User'}" style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;" loading="lazy" />` : '<svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor"><rect width="4" height="4" x="3" y="3" rx="1"/><rect width="4" height="4" x="17" y="17" rx="1"/></svg>'}
            </div>
            <div>
              <div class="hcard-name">${p.title || p.name || 'Untitled'}</div>
              <div class="hcard-sub">${p.display_name || 'general'}</div>
            </div>
          </div>
        </div>
      `).join('');
    }

    function renderBubbles(container, users) {
      if (!users || users.length === 0) {
        container.innerHTML = '<p class="text-center text-muted">No contributors found</p>';
        return;
      }
      container.innerHTML = users.map(u => {
        const hours = u.total_hours || 0;
        return `
        <div class="bubble-item" data-user-id="${u.id}" onclick="viewUser('${u.id}')">
          <div class="bubble-avatar">
            <img src="${u.avatar_url}" alt="${u.name || u.display_name}" />
          </div>
          <div class="bubble-label">
            <div class="bubble-name">${u.name || u.display_name}</div>
            <div class="bubble-hours">${hours}h</div>
          </div>
        </div>
      `;
      }).join('');
    }

    /* ──────────────────────────────────────────────
       INIT
    ────────────────────────────────────────────── */
    document.getElementById('footerYear').textContent = new Date().getFullYear();

    // Fire all data loads on page ready
    document.addEventListener('DOMContentLoaded', () => {
      loadFeaturedBanner();
      loadTopWeek();
      loadFanFavourites();
      loadTopAllTime();
      loadTopContributors();
    });
  </script>
